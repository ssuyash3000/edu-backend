<div class="container">
    <h2 class="mt-5">Uploaded Results</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Exam Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (results.length > 0) { %>
                <% results.forEach(result => { %>
                    <tr>
                        <td><%= result.className %></td>
                        <td><%= result.examName %></td>
                        <td>
                            <a href="/get-result/<%= result._id %>" class="btn btn-info">View</a>
                            <form action="/admin/delete-result/<%= result._id %>/<%= start %>/<%= end %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No results available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="d-flex justify-content-between mt-4">
        <% if (prevStart) { %>
            <button class="btn btn-secondary" onclick="window.location.href='/admin/view-results/?start=<%= prevStart %>&end=<%= prevEnd %>'">Previous</button>
        <% } else { %>
            <button class="btn btn-secondary" disabled>Previous</button>
        <% } %>
        <button class="btn btn-primary" onclick="window.location.href='/admin/view-results/?start=<%= nextStart %>&end=<%= nextEnd %>'" <%= results.length < 10 ? 'disabled' : '' %>>Next</button>
    </div>
</div>
